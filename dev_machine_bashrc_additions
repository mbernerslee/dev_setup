alias c='tput reset'

# Makes colours work for tmux
export TERM="screen-256color"

grepex() {
  grep -r "$1" . --include="*.ex" --include="*.exs" --include="*.html.eex"
}
tw() {
  mix test.watch "$1"
}
tws() {
  mix test.watch --stale
}
diffmaster() {
  git diff master >> diff; vim diff; rm diff
}
diffhead() {
  git diff HEAD >> diff; vim diff; rm diff
}
constant_testing() {
~/src/constant_testing/constant_testing.sh $1
}

ln -sf ~/src/dev_setup/.tmux.conf ~/.tmux.conf
ln -sf ~/src/dev_setup/.vimrc ~/.vimrc
export ERL_AFLAGS="-kernel shell_history enabled"
